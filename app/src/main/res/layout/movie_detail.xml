<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="com.harshssd.yuppdate.MovieDetailFragment"
    android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView android:id="@+id/detail_movie_poster_image"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_margin="10dp"
            android:layout_weight="60"/>

        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="25dp"
            android:layout_weight="40">
            <TextView android:id="@+id/detail_movie_release_year_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="25sp"/>
            <TextView android:id="@+id/detail_movie_rating_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="italic"
                android:layout_marginBottom="10dp"/>
            <Button android:id="@+id/detail_movie_favorite_button"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@color/colorPrimary"
                android:text="@string/favorite_button_text"/>
        </LinearLayout>

    </LinearLayout>

    <TextView android:id="@+id/detail_movie_overview"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

</LinearLayout>